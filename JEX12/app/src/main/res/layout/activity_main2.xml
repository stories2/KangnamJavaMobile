<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:onClick="btnOnZoomIn"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:onClick="btnOnZoomOut"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:onClick="btnOnRotate"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="△"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:onClick="btnOnBrightUp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▽"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:onClick="btnOnBrightDown"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◑"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:onClick="btnOnGray"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearCustomPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>